{
  "name": "image-processing-api",
  "version": "1.0.0",
  "description": "An API to resize images using Express, TypeScript, and Sharp",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jasmine-ts \"src/tests/**/*.ts\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.32.6",
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/express": "^4.17.21",
    "@types/jasmine": "^5.1.9",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.9.0",
    "globals": "^15.8.0",
    "jasmine": "^3.9.0",
    "jasmine-ts": "^0.4.0",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.0.0"
  }
}
